<!-- ./views/index.handlebars -->
<!-- search bar -->
<div class="container search-bar sort-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..." value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
  <div class="sort-bar-outer d-flex justify-content-end">
    <form>
      <div class="form-group">
        <label for="sort">排序方法</label>
        <select class="form-select" name="sort" id="sort">
          <option selected>Sort by ...</option>
          <option value="A-Z">A - Z</option>
          <option value="Z-A">Z - A</option>
          <option value="category">類別</option>
          <option value="area">地區</option>
        </select>
      </div>
    </form>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurantsData}}
        <div class="card mb-3">
          <a href="/restaurants/{{this._id}}">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
          </a>
          <div class="card-body p-3">
            <h6 class="card-title mb-1">{{this.name}}</h6>

            <div class="restaurant-category mb-1">
              <i class="fas fa-utensils pr-2"></i> {{this.category}}
            </div>

            <span class="badge badge-pill badge-danger font-weight-normal">
              {{this.rating}}
              <i class="fas fa-star fa-xs"></i>
            </span>
            <div class="d-grid d-sm-flex justify-content-sm-end">
              <a class="btn btn-secondary btn-sm mr-2" role="button" href="/restaurants/{{this._id}}/edit">Edit</a>
              <a class="btn btn-secondary btn-sm mr-2" role="button" href="/restaurants/{{this._id}}">Detail</a>
              <form action="./restaurants/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
                <button class="btn btn-secondary btn-sm mr-2">Delete</button >
              </form>
            </div>
          </div>
        </div>
        {{/each}}
       </div>
    </div>
  </div>
</div>